<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/leftProfilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person_icon"
            android:background="@drawable/circular_bg"
            android:paddingRight="5dp">

        </ImageView>

        <LinearLayout
            android:id="@+id/left_chat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_rounded_corner"
            android:backgroundTint="@color/chat_color_sender"
            android:orientation="vertical"
            android:padding="8dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/left_chat_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">



        <LinearLayout
            android:id="@+id/right_chat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text_rounded_corner"
            android:backgroundTint="@color/chat_color_receiver"
            android:padding="8dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/right_chat_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/rightProfilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person_icon"
            android:background="@drawable/circular_bg"
            android:paddingLeft="5dp">

        </ImageView>
    </LinearLayout>

</RelativeLayout>